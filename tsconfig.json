{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "allowJs": true /* JS ファイルもコンパイル対象に */,
    "checkJs": false /* JS ファイルの型チェックは行わない */,
    "outDir": "",
    "lib": ["DOM"],
    "resolveJsonModule": true,
    "importHelpers": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}
