{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "allowJs": true /* JS ファイルもコンパイル対象に */,
    "checkJs": false /* JS ファイルの型チェックは行わない */,
    "outDir": "",
    "lib": ["DOM"],
    "resolveJsonModule": true,
    "importHelpers": true,
    "removeComments": true
  }
}
